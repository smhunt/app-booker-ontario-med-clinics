{
  "name": "oab-ontario-medical-clinics",
  "version": "1.0.0",
  "description": "Ontario Health OAB v2.0 compliant appointment booking system",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:build": "docker-compose up --build",
    "down": "docker-compose down",
    "clean": "docker-compose down -v",
    "backend": "npm run dev --workspace=backend",
    "frontend": "npm run dev --workspace=frontend",
    "migrate": "npm run migrate --workspace=backend",
    "seed": "npm run seed --workspace=backend",
    "db:reset": "npm run db:reset --workspace=backend",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspace=frontend",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "build": "npm run build --workspaces --if-present"
  },
  "keywords": [
    "healthcare",
    "appointment-booking",
    "ontario",
    "phipa",
    "fhir"
  ],
  "author": "Ontario Medical Clinics",
  "license": "UNLICENSED"
}
