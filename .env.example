# Application
NODE_ENV=development
PORT=8080
FRONTEND_PORT=3000

# Database
DATABASE_URL=postgresql://oab_user:oab_password@db:5432/oab_dev

# Security - CRITICAL: Must be false by default
CANADA_PHIPA_READY=false

# JWT (ROTATE IN PRODUCTION)
JWT_SECRET=dev_secret_change_in_production_12345
JWT_EXPIRES_IN=24h

# Adapters
POS_ADAPTER=mock
NOTIFICATION_ADAPTER=mock

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=3600000

# Logging
LOG_LEVEL=info
LOG_REDACTION_ENABLED=true

# CORS
CORS_ORIGIN=http://localhost:3000

